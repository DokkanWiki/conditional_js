{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "sourceMap": true,
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "allowJs": false,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "removeComments": false,
        "lib": [
            "es6",
            "es7",
            "DOM"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.test.ts"
    ]
}